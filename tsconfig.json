{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    // "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@src": ["src/index"],
      "@src/*": ["src/*"],
      "@example/*": ["example/*"],
      "@example": ["example/index"],
    },
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "lib": [
      "dom",
      "es6",
      "es7"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}